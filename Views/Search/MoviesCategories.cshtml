@{
    ViewBag.Title = "Movies";
}

<!-- Movies -->
	<div id="_moviesDetails" style="padding-top:100px">
		<div class="container">
			<div class="row">
				<div class="col-md-2">
					<ul class="nav nav-pills nav-stacked">
					  <li role="presentation" class="active"><a href="#">Action</a></li>
					  <li role="presentation" ><a href="#">Romantic</a></li>
					  <li role="presentation"><a href="#">Horror</a></li>
					  <li role="presentation"><a href="#">Fiction</a></li>
					</ul>
				</div>
               
				<div class="col-md-10" >
                     @foreach(var q in Model)
                     {
					<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
					  <div class="panel panel-default ">
					    <div class="panel-heading" role="tab" id="headingOne">
					      <h4 class="panel-title">@q.Title</h4>
					        
					          <img src="\Images\scarface.jpg" class="img-rounded pull-right" alt="..." width="154" height="100">
					          <h3>Directed By <small>@q.Director</small></h3>
					          <img class="pull-left" src="/images/stars.png">
					          <span>3.4/5 <span>100,435 Reviews</span></span>
                                
					          <p>
					          	Great Movie
					          </p>
                                <a class="btn btn-primary btn-lg " role="button" href="#" >Suggest To A Friend</a>
                                <br/>
					      
					    </div>

					    
					  </div>
					</div>
                     }    
				</div>
                
			</div>
		</div>
	</div>

